{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "include": ["./src"]
}
